<div class="container">
  <form class="form-signin" method="POST" action="/login">
    <h2 class="form-signin-heading">Amicale login</h2>
    <label  class="sr-only">Username</label>
    <input type="text" name="email" class="form-control" placeholder="Username" required autofocus>
    <label  class="sr-only">Password</label>
    <input type="password" name="password" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit" value="submit">Log in</button>
  </form>
</div>

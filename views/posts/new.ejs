<div class="container">
  <form class="form-signin" method="POST" enctype="multipart/form-data" action="/post/new">
    <h2 class="form-signin-heading">New post</h2>
    <label for="inputTitle" class="sr-only">Title</label>
    <input type="text" id="inputTitle" class="form-control" name="title" placeholder="Title" required autofocus>
    <label for="inputDescription" class="sr-only">Description</label>
    <textarea cols="40" rows="5" name="description" class="form-control" placeholder="Description" required></textarea>
    <br/>
    <br/>
    <input type="file" name="picture" id="picture"></input>
    <br/>
    <br/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Send</button>
  </form>
</div>

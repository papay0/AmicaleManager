<div class="container">
  <form class="form-signin" method="POST" enctype="multipart/form-data" action="/notification/new">
    <h2 class="form-signin-heading">New simple notification</h2>
    <label for="inputTitle" class="sr-only">Text to send</label>
    <input type="text" id="inputTitle" class="form-control" name="text" placeholder="text" required autofocus>
    <br/>
    <br/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Send</button>
  </form>
</div>
